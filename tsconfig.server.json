{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/madedame/server",
    "target": "ES2022",
    "module": "CommonJS",
    "types": ["node"],
    "useDefineForClassFields": false,
    "noUnusedLocals": false
  },
  "files": [
    "server.ts",
    "src/main.server.ts",
    "src/app/app.config.ts",
    "src/server.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/main.ts"
  ]
}
